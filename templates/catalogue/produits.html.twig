{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    {# liste = nom de la variable dans le controleur #}

    {% for item in liste %}
    
    <div class="container">
        <div class="row">
            <div class="col-4 div-produit">
                <div class="titre-produit">chien-titre
                </div>
                <div class="image-produit">
                <img src="/media/{{ item.picture }}" alt="" height="300px" width="auto">
                </div>
                <div class="lien-produit">
                    <a href="/details/{{ item.id }}"> {{ item.name }} </a>
                </div>
                <div class="soustitre-produit">chien-soustitre
                </div>
                <div class="prix-produit">chien-prix
                </div>
                <div class="annee-produit">2010
                </div>
            </div>
        </div>
    </div>


<div class="container">
        <div class="row">


                <div class="card col-3 mb-3">
                        <h3 class="card-header"> {{ item.name }}</h3>
                        <div class="card-body">
                                <h5 class="card-title">Prix du produit</h5>
                                <h6 class="card-subtitle text-muted">Support card subtitle</h6>
                        </div>
                        <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%"
                                height="200" aria-label="Placeholder: Image cap" focusable="false" role="img"
                                preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180"
                                style="font-size:1.125rem;text-anchor:middle">
                                <rect width="100%" height="100%" fill="#868e96"></rect>
                                <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
                        </svg>
                        <div class="card-body">
                                <p class="card-text"> {{ item.longLib }}</p>
                        </div>
                        <ul class="list-group list-group-flush">
                                <li class="list-group-item">éppoustouflant</li>
                                <li class="list-group-item">épique</li>
                                <li class="list-group-item">anthologique..</li>
                        </ul>
                        <div class="card-body">
                                <a href="#" class="card-link">Card link</a>
                                <a href="#" class="card-link">Another link</a>
                        </div>
                </div>
        </div>
</div>
    {% endfor %}

{% endblock %}