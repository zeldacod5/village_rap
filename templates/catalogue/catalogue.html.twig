{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <section>

        {% set condition = true %}
        {% set x = 7 %}
        {% set y = 12 %}

        <div class="container">
            <div class="row">
                <div class="col-4">
                    <ul>
                        <li>option 1</li>
                        <li>option 2</li>
                        <li>option 3</li>
                        <li>option 4</li>
                        <li>option 5</li>
                        <li>...</li>
                    </ul>
                </div>

                <div class="col-8">
                    <div>
                        <h1>Categorie/Souscategorie</h1>
                    </div>

                    <div class="carrouselCatalogue">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    {% for product in products|slice(0, 6) %}
                                        <div class="map">
                                            <img src="..." class="modele">
                                            <p class="nomCD">nomCD</p>
                                            <div class="detail">
                                                <h2>prix</h1>
                                                <p class="detailCD">blablabla</p>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                {% for i in 0..10000 %}
                                {% if condition == true %}
                                    <div class="carousel-item">
                                        {% for product in products|slice(x, y) %}
                                            <div class="map">
                                                <img src="..." class="modele">
                                                <p class="nomCD">nomCD</p>
                                                <div class="detail">
                                                    <h2>prix</h1>
                                                    <p class="detailCD">blablabla</p>
                                                </div>
                                            </div>
                                            {% if product is not defined %} 
                                                {% set condition = false %}
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                    {% if condition == true %} 
                                        {% set x = x + 6 %}
                                        {% set y = y + 6 %}
                                    {% else %}
                                        {% set x = 7 %}
                                        {% set y = 12 %}
                                    {% endif %}
                                {% endif %}
                                {% endfor %}
                            </div>
                            
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

{% endblock %}
