{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>ShortLib</th>
                <th>LongLib</th>
                <th>Reference</th>
                <th>Price</th>
                <th>Picture</th>
                <th>Stock</th>
                <th>StockMax</th>
                <th>StockAlert</th>
                <th>PriceIncludedTaxes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.shortLib }}</td>
                <td>{{ product.longLib }}</td>
                <td>{{ product.reference }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.picture }}</td>
                <td>{{ product.stock }}</td>
                <td>{{ product.stockMax }}</td>
                <td>{{ product.stockAlert }}</td>
                <td>{{ product.priceIncludedTaxes }}</td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_new') }}">Create new</a>
{% endblock %}
