{% extends 'base.html.twig' %}

{% block title %}Formulaire d'inscription{% endblock %}

{% block body %}

<div class="container center">
    <div class="row">
        <div class="col mb-3 formphrase">
            <h1>Formulaire d'inscription</h1>
        </div>
    </div>

 <fieldset class="mb-3 fieldset1">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Votre mot de passe'
        }) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.phone) }}
        {{ form_row(registrationForm.city) }}
        {{ form_row(registrationForm.country) }}
        {{ form_row(registrationForm.zipcode) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn boutoninscription">Inscription</button>
    {{ form_end(registrationForm) }}
    </fieldset>
</div>
{% endblock %}